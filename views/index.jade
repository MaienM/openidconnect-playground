	span#clear-all-button
	div#server-urls
	div#token-panel

	input(type="hidden", name="redirect-uri", value=redirect_uri)
	input(type="hidden", name="stateToken", value=state)
	input(type="hidden", name="code", value=code)
	input(type="hidden", name="auth0ClientID", value="BUIJSW9x60sIHBw8Kd9EmCbj8eDIFxDC")
	input(type="hidden", name="auth0ClientSecret", value="gcyGiDHsIE6bUT9oAs6ghuynjt8usUqTRglg8n8eWqw9SgnGJ5cRLCUz03gJ_s_X")

	script(src='index.js')
