html(lang="en")
head
	meta(charset="UTF-8")
	meta(name="viewport", content="width=device-width, initial-scale=1.0")
	link(rel="stylesheet", href="https://cdn.auth0.com/styleguide/4.7.5/index.min.css")
	title OpenID Connect Playground
	
body
	header.main-header
		nav.main-navigation
			.container
				a.openid-logo(href="")
					h1.logo-text OpenID
				//- ul.navigation
				//-	 li.navigation-item
